{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/umd",
    "target": "ES5",
    "module": "UMD",
    "emitDeclarationOnly": false,
    "declaration": false,
    "noEmit": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/__mocks__/*"
  ]
}
