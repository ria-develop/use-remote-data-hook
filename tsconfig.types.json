{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "es",
    "target": "ES6",
    "module": "ES6",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declarationDir": "typings",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/__mocks__/*"
  ]
}
